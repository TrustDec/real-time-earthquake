<view class="map-container">
    <view class='share-button' bindtap='onShareAppMessage'>
      分享
    </view>
    <map 
    id="map" 
    longitude="{{longitude}}" 
    latitude="{{latitude}}" 
    markers="{{markers}}"
    scale="8"
    bindcontroltap="controltap" 
    bindmarkertap="markertap" 
    bindregionchange="regionchange" 
    show-location 
    style="width: 100%; height: 100vh;">
    </map>
</view>
